#!/bin/bash

# (c) 2014-2015 Sam Nazarko
# email@samnazarko.co.uk

systemctl stop mediacenter

# Package downloads have been done in the addon, so let's get right to upgrade.

debconf-apt-progress apt-get -y dist-upgrade

if [ -f /tmp/reboot-needed ] || [ -f /var/run/reboot-required ]; then reboot; else systemctl mediacenter start; fi
