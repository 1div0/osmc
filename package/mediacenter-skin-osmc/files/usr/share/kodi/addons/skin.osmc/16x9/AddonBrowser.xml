<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- addonbrowser -->
	<backgroundcolor>0xff2e4655</backgroundcolor>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50,500</views>

	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<!-- Fanart -->
		<include>Fanart</include>

		<!-- Main group -->
		<control type="group">
			<include>WindowFadeAnimation</include>

			<!-- Views -->
			<include>Viewtype50</include>
			<include>Viewtype51</include>
			<include>Viewtype52</include>
			<include>Viewtype53</include>

		</control>

		<control type="group">
			<left>-616</left>
			<animation effect="slide" end="616" time="200" tween="cubic" easing="out" reversible="true" condition="ControlGroup(3000).HasFocus">Conditional</animation>

			<!-- Heading -->
			<control type="label">
				<left>100</left>
				<top>166</top>
				<width>1400</width>
				<height>200</height>
				<font>Font40</font>
				<textcolor>ColorFO</textcolor>
				<label>33063</label>
			</control>

			<!-- Previous item -->
			<control type="image">
				<left>100</left>
				<top>332</top>
				<width>40</width>
				<height>4</height>
				<texture>common/white.png</texture>
				<colordiffuse>ColorNF</colordiffuse>
				<visible>Container(3000).HasPrevious</visible>
			</control>

			<!-- Options -->
			<control type="grouplist" id="3000">
				<left>100</left>
				<top>358</top>
				<width>516</width>
				<height>532</height>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<onleft>noop</onleft>
				<onright>50</onright>
				<itemgap>0</itemgap>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<defaultcontrol always="true">99</defaultcontrol>
				<!-- View -->
				<control type="button" id="99">
					<include>OptionButtons</include>
					<label>$INFO[Container.ViewMode]</label>
					<onclick>Container.NextViewMode</onclick>
				</control>
				<!-- Fanart -->
				<control type="radiobutton" id="98">
					<include>OptionButtons</include>
					<label>20445</label>
					<onclick>Skin.ToggleSetting(AddonFanart)</onclick>
					<selected>Skin.HasSetting(AddonFanart)</selected>
				</control>
				<!-- Sort by -->
				<control type="button" id="3">
					<include>OptionButtons</include>
					<label>103</label>
					<visible>Control.IsEnabled(3)</visible>
				</control>
				<!-- Sort ascending/descending -->
				<control type="togglebutton" id="4">
					<include>OptionButtons</include>
					<label>584</label>
					<altlabel>585</altlabel>
					<usealttexture>Container.SortDirection(Descending)</usealttexture>
					<visible>Control.IsEnabled(4)</visible>
				</control>
				<!-- Filter -->
				<control type="edit" id="19">
					<include>OptionButtons</include>
					<label>587</label>
					<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
				</control>
				<!-- Filter -->
				<control type="radiobutton" id="93">
					<include>OptionButtons</include>
					<label>587</label>
					<onclick>right</onclick>
					<onclick>Filter</onclick>
					<selected>Container.Filtered</selected>
					<visible>Container.CanFilterAdvanced</visible>
				</control>
				<!-- Auto update -->
				<control type="button" id="5">
					<include>OptionButtons</include>
					<label>24063</label>
					<visible>Control.IsEnabled(5)</visible>
				</control>
				<!-- Notifications -->
				<control type="radiobutton" id="6">
					<include>OptionButtons</include>
					<label>25000</label>
					<visible>Control.IsEnabled(6)</visible>
				</control>
				<!-- Language -->
				<control type="radiobutton" id="7">
					<include>OptionButtons</include>
					<label>25001</label>
					<visible>Control.IsEnabled(7)</visible>
				</control>
			</control>

			<!-- Next item -->
			<control type="image">
				<left>100</left>
				<top>926</top>
				<width>40</width>
				<height>4</height>
				<texture>common/white.png</texture>
				<colordiffuse>ColorNF</colordiffuse>
				<visible>Container(3000).HasNext</visible>
			</control>

		</control>

		<!-- Logo -->
		<include>Logo</include>

		<!-- Time -->
		<include>Time</include>

	</controls>

</window>