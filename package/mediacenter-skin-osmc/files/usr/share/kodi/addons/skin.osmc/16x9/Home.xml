					<!-- Previous item -->
					<control type="image">
						<left>702</left>
						<top>802</top>
						<width>40</width>
						<height>4</height>
						<texture>common/white.png</texture>
						<colordiffuse>ColorNF</colordiffuse>
						<visible>Container(9001).HasPrevious</visible>
					</control>

					<!-- Sub menu list -->
					<control type="fixedlist" id="9001">
						<left>702</left>
						<top>816</top>
						<width>640</width>
						<height>708</height>
						<onup>9100</onup>
						<ondown>noop</ondown>
