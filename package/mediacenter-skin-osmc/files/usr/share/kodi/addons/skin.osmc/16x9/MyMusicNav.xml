<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- musiclibrary -->
	<backgroundcolor>0xff2e4655</backgroundcolor>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>51,55,54,50</views>

	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<!-- Fanart -->
		<include>Fanart</include>

		<!-- Main group -->
		<control type="group">
			<include>WindowFadeAnimation</include>

			<!-- Views -->
			<include>Viewtype50</include>
			<include>Viewtype51</include>
			<include>Viewtype52</include>
			<include>Viewtype53</include>

		</control>

		<control type="group">
			<left>-616</left>
			<animation effect="slide" end="616" time="200" tween="cubic" easing="out" reversible="true" condition="ControlGroup(3000).HasFocus">Conditional</animation>

			<!-- Heading -->
			<control type="label">
				<left>100</left>
				<top>166</top>
				<width>1400</width>
				<height>200</height>
				<font>Font40</font>
				<textcolor>ColorFO</textcolor>
				<label>33063</label>
			</control>

			<!-- Previous item -->
			<control type="image">
				<left>100</left>
				<top>332</top>
				<width>40</width>
				<height>4</height>
				<texture>common/white.png</texture>
				<colordiffuse>ColorNF</colordiffuse>
				<visible>Container(3000).HasPrevious</visible>
			</control>

			<!-- Options -->
			<control type="grouplist" id="3000">
				<left>100</left>
				<top>358</top>
				<width>516</width>
				<height>532</height>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<onleft>noop</onleft>
				<onright>50</onright>
				<itemgap>0</itemgap>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<defaultcontrol always="true">99</defaultcontrol>
				<!-- View -->
				<control type="button" id="99">
					<include>OptionButtons</include>
					<label>$INFO[Container.ViewMode]</label>
					<onclick>Container.NextViewMode</onclick>
				</control>
				<!-- Fanart -->
				<control type="radiobutton" id="98">
					<include>OptionButtons</include>
					<label>20445</label>
					<onclick>Skin.ToggleSetting(MusicFanart)</onclick>
					<selected>Skin.HasSetting(MusicFanart)</selected>
				</control>
				<!-- Sort by -->
				<control type="button" id="3">
					<include>OptionButtons</include>
					<label>103</label>
					<visible>Control.IsEnabled(3)</visible>
				</control>
				<!-- Sort ascending/descending -->
				<control type="togglebutton" id="4">
					<include>OptionButtons</include>
					<label>584</label>
					<altlabel>585</altlabel>
					<usealttexture>Container.SortDirection(Descending)</usealttexture>
					<visible>Control.IsEnabled(4)</visible>
				</control>
				<!-- Filter -->
				<control type="edit" id="19">
					<include>OptionButtons</include>
					<label>587</label>
					<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
				</control>
				<!-- Filter -->
				<control type="radiobutton" id="93">
					<include>OptionButtons</include>
					<label>587</label>
					<onclick>Right</onclick>
					<onclick>Right</onclick>
					<onclick>Filter</onclick>
					<selected>Container.Filtered</selected>
					<visible>Container.CanFilterAdvanced</visible>
				</control>
				<!-- Open playlist -->
				<control type="button" id="91">
					<include>OptionButtons</include>
					<label>13350</label>
					<onclick condition="!StringCompare(Playlist.Length(music),0)">ActivateWindow(musicplaylist)</onclick>
					<visible>!StringCompare(Playlist.Length(music),0)</visible>
				</control>
				<!-- Update library -->
				<control type="togglebutton" id="20">
					<include>OptionButtons</include>
					<label>653</label>
					<altlabel>13353</altlabel>
					<usealttexture>Library.IsScanningMusic</usealttexture>
				</control>
				<!-- Search -->
				<control type="button" id="8">
					<include>OptionButtons</include>
					<label>137</label>
					<visible>Control.IsEnabled(8)</visible>
				</control>
				<!-- PartyMode -->
				<control type="radiobutton" id="16">
					<include>OptionButtons</include>
					<label>589</label>
				</control>
				<!-- Files -->
				<control type="button" id="92">
					<include>OptionButtons</include>
					<label>744</label>
					<onclick>ReplaceWindow(MusicFiles)</onclick>
					<selected>Window.IsVisible(MusicLibrary)</selected>
				</control>
				<!-- Settings -->
				<control type="button" id="95">
					<include>OptionButtons</include>
					<label>5</label>
					<onclick>ActivateWindow(musicssettings)</onclick>
				</control>
			</control>

			<!-- Next item -->
			<control type="image">
				<left>100</left>
				<top>926</top>
				<width>40</width>
				<height>4</height>
				<texture>common/white.png</texture>
				<colordiffuse>ColorNF</colordiffuse>
				<visible>Container(3000).HasNext</visible>
			</control>

		</control>

		<!-- Logo -->
		<include>Logo</include>

		<!-- Time -->
		<include>Time</include>

	</controls>

</window>