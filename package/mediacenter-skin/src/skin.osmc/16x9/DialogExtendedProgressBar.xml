<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- extendedprogressdialog -->
	<zorder>2</zorder>

	<controls>

		<control type="group">
			<centerleft>50%</centerleft>
			<top>15</top>
			<width>800</width>
			<height>180</height>
			<include>DialogZoomAnimation</include>
			<animation effect="fade" start="100" end="0" time="0" condition="Window.IsActive(fullscreenvideo)">Conditional</animation>

			<!-- Background image -->
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>800</width>
				<height>180</height>
				<texture colordiffuse="IconColor1">dialogs/DialogBackground.png</texture>
			</control>

			<!-- Heading -->
			<control type="label" id="30">
				<left>40</left>
				<top>50</top>
				<width>720</width>
				<height>33</height>
				<align>center</align>
				<scroll>true</scroll>
				<font>font33</font>
				<textcolor>DialogColorFO</textcolor>
			</control>

			<!-- Details -->
			<control type="label" id="31">
				<left>40</left>
				<top>104</top>
				<width>720</width>
				<height>27</height>
				<align>center</align>
				<scroll>true</scroll>
				<haspath>true</haspath>
				<font>font30</font>
				<textcolor>DialogColorFO</textcolor>
			</control>

		</control>

	</controls>

</window>